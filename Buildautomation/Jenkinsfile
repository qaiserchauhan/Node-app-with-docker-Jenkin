pipeline {
    agent any

    environment {
        IMAGE_NAME = "node-docker-demo"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'âœ… Checking out source code...'
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Building Docker image...'
                script {
                    docker.build("${IMAGE_NAME}")
                }
            }
        }

        stage('Run Build Inside Container') {
            steps {
                echo 'ğŸ“¦ Installing dependencies and building app in Docker...'
                script {
                    docker.image("${IMAGE_NAME}").inside {
                        sh 'npm install'
                        // Optional: if you add a build script later
                        // sh 'npm run build'
                    }
                }
            }
        }

        stage('Prepare Artifact') {
            steps {
                echo 'ğŸ“ Preparing build artifact...'
                sh '''
                    mkdir -p build_artifacts
                    zip -r build_artifacts/app.zip *
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Docker-based build succeeded!'
            archiveArtifacts artifacts: 'build_artifacts/*.zip', fingerprint: true
        }
        failure {
            echo 'âŒ Docker-based build failed.'
        }
    }
}
