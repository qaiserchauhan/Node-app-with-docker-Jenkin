pipeline {
    agent any

    tools {
        nodejs 'NodeJS'  // Name used in Global Tool Configuration
    }

    environment {
        SONARQUBE_SERVER = 'SonarQubeServerName' // Optional
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'âœ… Checking out source code...'
                checkout scm
            }
        }

        stage('Debug Env') {
            steps {
                echo 'ğŸ› Checking environment...'
                sh 'echo $PATH'
                sh 'which node'
                sh 'which npm'
                sh 'node -v'
                sh 'npm -v'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'ğŸ” Running SonarQube Scan (Skipped)...'
                // Uncomment below when Sonar is integrated
                // withSonarQubeEnv('SonarQubeServerName') {
                //     sh 'sonar-scanner'
                // }
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing npm dependencies...'
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ—ï¸ Building the application...'
                sh 'npm run build'
            }
        }

        stage('Prepare Artifact') {
            steps {
                echo 'ğŸ“ Zipping the build artifacts...'
                sh '''
                    mkdir -p build_artifacts
                    zip -r build_artifacts/app.zip *
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and Artifact preparation succeeded!'
            archiveArtifacts artifacts: 'build_artifacts/*.zip', fingerprint: true
        }
        failure {
            echo 'âŒ Build Failed!'
        }
    }
}
